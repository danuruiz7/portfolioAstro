---
const { title, description, techs, image, code, preview } = Astro.props;
---

<li
  class="w-full max-w-sm mx-auto overflow-hidden rounded-lg bg-slate-800 shadow-lg transition-all duration-600 hover:shadow-lg hover:shadow-blue-500/50"
>
  <div class="flex flex-col h-full">
    <div class="relative">
      <img
        class="w-full h-48 object-cover"
        src={image}
        alt={`Vista previa del proyecto ${title}`}
      />
      <div
        class="absolute inset-0 bg-gradient-to-t from-slate-800 to-transparent opacity-60"
      >
      </div>
    </div>
    <div class="flex flex-col flex-grow p-4">
      <h3 class="mt-2 mb-2 text-xl font-bold text-gray-100">{title}</h3>
      <p class="text-sm text-gray-300 flex-grow">{description}</p>
      <div class="mt-4">
        <span
          class="animated-title inline-block px-3 py-1 rounded-full text-xs font-bold"
        >
          {techs}
        </span>
      </div>
    </div>
    <div class="mt-auto">
      <div class="flex">
        <a
          href={code}
          target="_blank"
          rel="noopener noreferrer"
          class="card-button flex-1 inline-flex items-center justify-center py-3 px-4 bg-slate-700 text-gray-100 hover:bg-slate-600 transition-colors duration-200"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 mr-2"
            fill="currentColor"
            viewBox="0 0 24 24"
            ><path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path></svg
          >
          <span class="font-medium">GitHub</span>
        </a>
        <a
          target="_blank"
          rel="noopener noreferrer"
          href={preview}
          class="card-button flex-1 inline-flex items-center justify-center py-3 px-4 bg-slate-700 text-gray-100 hover:bg-slate-600 transition-colors duration-200"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 mr-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
            ></path>
          </svg>
          <span class="font-medium">Probar</span>
        </a>
      </div>
    </div>
  </div>
</li>

<style>
  .animated-title {
    background-image: linear-gradient(to right, #0073e6, #10f26e);
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    animation: textAnimation 5s linear infinite;
  }

  @keyframes textAnimation {
    0%,
    100% {
      background-image: linear-gradient(to right, #0073e6, #10f26e);
    }
    25% {
      background-image: linear-gradient(to right, #ffcc00, #ff6b6b);
    }
    50% {
      background-image: linear-gradient(to right, #4caf50, #2196f3);
    }
    75% {
      background-image: linear-gradient(to right, #9c27b0, #e91e63);
    }
  }

  .card-button {
    position: relative;
    overflow: hidden;
  }

  .card-button::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      120deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    transition: all 0.6s;
  }

  .card-button:hover::before {
    left: 100%;
  }

  .card-button:active {
    transform: translateY(2px);
  }
</style>

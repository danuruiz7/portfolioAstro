---
const { title, description, techs, image, code, preview } = Astro.props;
---

<li
  class="w-4/5 md:w-auto lg:w-auto flex flex-col mx-auto divide-y divide-gray-900 rounded-lg bg-slate-800 text-center shadow shadow-slate-200"
>
  <div class="flex flex-1 flex-col">
    <img
      class="mx-auto p-4 rounded-2xl flex-shrink-0 w-full h-40"
      src={image}
      alt={title}
    />
    <h3 class="mt-2 mb-2 text-xl font-bold text-gray-100">{title}</h3>
    <dl class="flex flex-grow flex-col justify-between">
      <dd class="text-sm text-gray-100 px-2">
        {description}
      </dd>
      <dd class="items-end">
        <span class="animated-title rounded-full text-sm font-bold"
          >{techs}</span
        >
      </dd>
    </dl>
  </div>
  <div class="mt-3">
    <div class="flex divide-x divide-gray-900">
      <div
        class="flex w-0 flex-1 bg-slate-300 rounded-bl-lg hover:bg-slate-300/80"
      >
        <a
          href={code}
          target="_blank"
          class="relative -mr-px inline-flex w-0 flex-1 items-center justify-center rounded-bl-lg border border-transparent py-4 text-sm font-medium text-gray-700 hover:text-gray-500 docs-creator"
          ><img
            src="https://raw.githubusercontent.com/jmontes33/React-Portfolio/20d9cedab15245df7dbed1c63ebc814c6d655c57/src/assets/github-logo.svg"
            alt="github"
            class="h-5 w-5 text-gray-400"
            aria-hidden="true"
          />
          <span class="ml-3 text-black font-bold">Github</span></a
        >
      </div>
      <div
        class="-ml-px flex w-0 flex-1 bg-slate-300 rounded-br-lg hover:bg-slate-300/80"
      >
        <a
          target="_blank"
          href={preview}
          class="relative inline-flex w-0 flex-1 items-center justify-center rounded-br-lg border border-transparent py-4 text-sm font-medium text-gray-700 hover:text-gray-500 docs-creator"
          ><svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
            class="h-5 w-5 text-gray-900"
            ><path
              fill-rule="evenodd"
              d="M2 4.25A2.25 2.25 0 014.25 2h11.5A2.25 2.25 0 0118 4.25v8.5A2.25 2.25 0 0115.75 15h-3.105a3.501 3.501 0 001.1 1.677A.75.75 0 0113.26 18H6.74a.75.75 0 01-.484-1.323A3.501 3.501 0 007.355 15H4.25A2.25 2.25 0 012 12.75v-8.5zm1.5 0a.75.75 0 01.75-.75h11.5a.75.75 0 01.75.75v7.5a.75.75 0 01-.75.75H4.25a.75.75 0 01-.75-.75v-7.5z"
              clip-rule="evenodd"></path></svg
          ><span class="ml-3 text-black font-bold">Probar</span></a
        >
      </div>
    </div>
  </div>
</li>

<style>
  .animated-title {
    background-image: linear-gradient(to right, #0073e6, #10f26e);
    background-clip: text;
    color: transparent;
    animation: textAnimation 3s linear infinite; /* Nueva animaci贸n para el color del texto */
  }

  @keyframes textAnimation {
    0% {
      color: transparent;
    }
    25% {
      color: #ffcc00; /* Cambia este valor al color que desees en el 25% de la animaci贸n */
    }
    50% {
      color: #4caf50; /* Cambia este valor al color que desees en el 50% de la animaci贸n */
    }
    75% {
      color: #2196f3; /* Cambia este valor al color que desees en el 75% de la animaci贸n */
    }
    100% {
      color: transparent;
    }
  }

  @keyframes gradientAnimation {
    0% {
      clip-path: polygon(0 0, 0 0, 100% 100%, 0% 100%);
    }
    25% {
      clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
    }
    50% {
      clip-path: polygon(0 0, 100% 0, 100% 100%, 0% 100%);
    }
    75% {
      clip-path: polygon(0 0, 100% 0, 0% 100%, 0% 100%);
    }
    100% {
      clip-path: polygon(0 0, 100% 0, 0% 100%, 0% 100%);
    }
  }

  .card-button:active {
    transform: translateY(2px);
    box-shadow: 0px 0px 50px 1px rgb(255, 255, 255);
  }
</style>

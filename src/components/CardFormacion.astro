---
import '../style/global.css';

const {
  sitioURL,
  academiaLogo,
  academia,
  grado,
  fecha,
  subtitulo,
  link,
  nombreLink,
} = Astro.props;
---

<section
  class="w-full gap-4 flex flex-col justify-center items-center mb-16 p-4 rounded-md bg-slate-500 shadow-md shadow-slate-400"
>
  <picture
    class="w-full h-1/3 flex items-center justify-center bg-gray-700 rounded-lg"
  >
    <a href={sitioURL}>
      <img class="w-full md:w-full mx-auto" src={academiaLogo} alt={academia} />
    </a>
  </picture>

  <div class="w-full text-center bg-gray-700 rounded py-4">
    <h3 class="text-3xl text-center">
      <a href={sitioURL}>{academia}</a>
    </h3>
    <div class="">
      <h3 class="text-xl mb-1">{grado}</h3>
      <p>{fecha}</p>
    </div>
  </div>

  <div class="w-full text-center bg-gray-700">
    <h3 class="text-xl">{subtitulo}</h3>
    <p>
      <a class="animated-title font-bold" target="_blank" href={link}
        >{nombreLink}</a
      >
    </p>
  </div>
</section>

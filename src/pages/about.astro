---
import CardFormacion from '../components/CardFormacion.astro';
import Layout from '../layouts/Layout.astro';
import { formacion } from '../mooks/formacion.js';
---

<Layout>
  <section class="flex flex-col items-center">
    <h1
      class="w-full text-center text-7xl font-bold mb-16"
      transition:animate="slide"
    >
      Formaci√≥n
    </h1>
    <ul class="w-full grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        formacion.map((item) => (
          <CardFormacion
            sitioURL={item.sitioURL}
            academiaLogo={item.academiaLogo}
            academia={item.academia}
            grado={item.grado}
            fecha={item.fecha}
            subtitulo={item.subtitulo}
            link={item.link}
            nombreLink={item.nombreLink}
          />
        ))
      }
    </ul>
  </section>
</Layout>
